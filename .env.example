# =============================================
# JRADIANCE E-Commerce Environment Variables
# =============================================

# Copy this file to .env.local and fill in your values


# SUPABASE CONFIGURATION
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# Service role key - KEEP SECRET! Only used in server actions
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# SUPABASE STORAGE
# Storage buckets must be created in Supabase Dashboard > Storage
# Bucket names: 'product-images', 'avatars'
# Policies are configured in the SQL setup script


# PAYSTACK PAYMENT GATEWAY
# Get from: https://dashboard.paystack.com/#/settings/api
# Use test keys for development, live keys for production
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxx


# WEBSITE URLs
# Your production domain (no trailing slash)
NEXT_PUBLIC_BASE_URL=https://jradianceco.com
NEXT_PUBLIC_SITE_URL=https://jradianceco.com


# DEPRECATED: NAMECHEAP FTP (For Image/Video Storage)
# This has been replaced with Supabase Storage
# These variables are kept for backward compatibility but are no longer used
# NAMECHEAP_FTP_HOST=ftp.jradianceco.com
# NAMECHEAP_FTP_PORT=21
# NAMECHEAP_FTP_USER=your-ftp-username
# NAMECHEAP_FTP_PASSWORD=your-ftp-password
# NAMECHEAP_FTP_BASE_URL=https://jradianceco.com/storage


# ENVIRONMENT
NODE_ENV=development
# Change to 'production' when deploying
