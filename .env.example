# =============================================
# JRADIANCE E-Commerce Environment Variables
# =============================================

# Copy this file to .env.local and fill in your values


# SUPABASE CONFIGURATION
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
# Service role key - KEEP SECRET! Only used in server actions
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# PAYSTACK PAYMENT GATEWAY
# Get from: https://dashboard.paystack.com/#/settings/api
# Use test keys for development, live keys for production
PAYSTACK_SECRET_KEY=your_paystack_secret_key_here
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=your_paystack_public_key_here


# WEBSITE URLs
# Your production domain (no trailing slash)
NEXT_PUBLIC_BASE_URL=https://jradianceco.com
NEXT_PUBLIC_SITE_URL=https://jradianceco.com


# NAMECHEAP FTP (For Image/Video Storage)
# Get from Namecheap hosting control panel (used for cost optimization)
# Alternative: Use Supabase Storage 
NAMECHEAP_FTP_HOST=184.94.213.216
NAMECHEAP_FTP_PORT=21
NAMECHEAP_FTP_USER=jradiance_product_image_storage@jradianceco.com
NAMECHEAP_FTP_PASSWORD=NewBegins@7
NAMECHEAP_FTP_BASE_URL=https://jradianceco.com/storage


# ENVIRONMENT
NODE_ENV=development
# Change to 'production' when deploying

